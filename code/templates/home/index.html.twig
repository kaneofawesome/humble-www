{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle }} - Modern Design Solutions{% endblock %}

{% block description %}Discover innovative design solutions and technical excellence with Humble - where creativity meets functionality.{% endblock %}

{% block body %}
    <section class="hero-section">
        <div class="hero-container">
            <div class="hero-logo">
                <img src="{{ heroImageUrl }}" alt="Humble Wizards Logo" class="hero-logo-img" loading="lazy">
            </div>
            
            <div class="hero-content">
                <div class="hero-text">
                    <h1 class="hero-title">Welcome to <span class="brand-highlight">Humble</span></h1>
                    <p class="hero-subtitle">Where innovation meets excellence</p>
                    <div class="hero-actions">
                        <a href="#services" class="btn btn-primary">Discover More</a>
                        <a href="#contact" class="btn btn-outline">Get In Touch</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="features-section" id="services">
        <div class="features-container">
            <div class="section-header">
                <h2 class="section-title">What We Do</h2>
                <p class="section-subtitle">Crafting exceptional digital experiences</p>
            </div>
            
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon design-icon">
                        <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
                            <rect x="8" y="8" width="32" height="24" rx="2" stroke="currentColor" stroke-width="2"/>
                            <path d="M16 16h16M16 20h12M16 24h8" stroke="currentColor" stroke-width="2"/>
                            <circle cx="36" cy="36" r="6" stroke="currentColor" stroke-width="2"/>
                            <path d="M33 36h6M36 33v6" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </div>
                    <h3 class="feature-title">Modern Design Solutions</h3>
                    <p class="feature-description">Crafting beautiful and functional experiences that engage users and drive results.</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon tech-icon">
                        <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
                            <rect x="6" y="12" width="36" height="24" rx="2" stroke="currentColor" stroke-width="2"/>
                            <path d="M12 18h24M12 22h20M12 26h16" stroke="currentColor" stroke-width="2"/>
                            <circle cx="24" cy="8" r="2" fill="currentColor"/>
                            <path d="M22 8L24 12L26 8" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </div>
                    <h3 class="feature-title">Technical Excellence</h3>
                    <p class="feature-description">Building robust, scalable solutions with cutting-edge technology and best practices.</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon strategy-icon">
                        <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
                            <rect x="6" y="18" width="36" height="24" rx="2" stroke="currentColor" stroke-width="2"/>
                            <path d="M18 6v12M30 6v12" stroke="currentColor" stroke-width="2"/>
                            <circle cx="18" cy="4" r="2" fill="currentColor"/>
                            <circle cx="30" cy="4" r="2" fill="currentColor"/>
                            <path d="M12 24h6l3 6 6-12 6 6h3" stroke="currentColor" stroke-width="2" fill="none"/>
                        </svg>
                    </div>
                    <h3 class="feature-title">Strategic Thinking</h3>
                    <p class="feature-description">Combining creativity with data-driven insights to deliver meaningful business outcomes.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="cta-section">
        <div class="cta-container">
            <div class="cta-content">
                <h2 class="cta-title">Ready to Get Started?</h2>
                <p class="cta-subtitle">Let's work together to bring your vision to life</p>
                <a href="#contact" class="btn btn-primary btn-large">Start Your Project</a>
            </div>
        </div>
    </section>
{% endblock %}