{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block description %}Discover our specialized services: Life and Leadership Coaching for Engineers and Electronics & Code Project Consulting. Expert guidance for technical professionals and innovative projects.{% endblock %}

{% block body %}
    {# Services Overview Section #}
    <section class="about-section services-intro-section" id="services-intro">
        <div class="about-container">
            <div class="section-content">
                <h1 class="section-title">Our Services</h1>
                <p class="section-subtitle">We offer two specialized services that combine technical excellence with personal growth, helping engineers and innovators reach their full potential.</p>
            </div>
        </div>
    </section>

    {# Services Section #}
    <section class="about-section culture-section" id="services">
        <div class="about-container">
            <div class="services-grid">
                {% for service in services %}
                    <div class="service-card">
                        <div class="service-header">
                            <h2 class="service-title">{{ service.title }}</h2>
                            <p class="service-description">{{ service.description }}</p>
                        </div>
                        
                        <div class="service-features">
                            <h4 class="features-title">What We Offer:</h4>
                            <ul class="features-list">
                                {% for feature in service.features %}
                                    <li class="feature-item">{{ feature }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        
                        <div class="service-cta">
                            <a href="{{ path('coming_soon') }}" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Call to Action Section #}
    <section class="about-section team-section" id="get-started">
        <div class="about-container">
            <div class="section-content">
                <h2 class="section-title">Ready to Get Started?</h2>
                <p class="section-subtitle">Whether you're looking to grow as a leader or bring your technical project to life, we're here to help you succeed.</p>
                
                <div class="cta-actions">
                    <a href="{{ path('coming_soon') }}" class="btn btn-primary btn-large">Schedule a Consultation</a>
                    <a href="{{ path('about') }}" class="btn btn-outline btn-large">Learn About Our Approach</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}